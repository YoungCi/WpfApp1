<Page x:Class="WpfApp1.index"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="index">

    <Grid Background="White">
        <Grid.Resources>
            <Style TargetType="Button" x:Key="man_style">
                <Setter Property="FontSize" Value="25"></Setter>
                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                <Setter Property="Width" Value="240"></Setter>
                <Setter Property="Height" Value="50"></Setter>
            </Style>
        </Grid.Resources>
        <Label Content="欢迎来到小型销售部门管理系统" HorizontalAlignment="Center" FontSize="30" Margin="0,80,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Button Content="部门主管界面" Style="{StaticResource man_style}" Click="Manager"  Margin="0,180,0,0" VerticalAlignment="Top"/>
        <Button Content="部门职员界面" Style="{StaticResource man_style}" Click="Employee" Margin="0,260,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
